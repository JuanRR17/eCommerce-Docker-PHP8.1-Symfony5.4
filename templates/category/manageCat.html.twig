{% extends 'base.html.twig' %}

{% block title %}New Category{% endblock %}

{% block main %}

    <h1>Create New Category</h1>
    <form action="{{path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params'))}}" method='POST'>
        <label for="name">Name*</label>
        <input type="text" name="name" placeholder="Name" required="required"/>

        <button type="submit">Create Category</button>
    </form>

    {% if message is defined %}
        <div class="message">{{message}}</div>
    {% endif %}

    <h1>Categories</h1>
    <table>
        <tr>
            <th>Name</th>
            <th>Actions</th>
            <th>Products</th>
        </tr>
    
        {% for category in getCategories() %}
        <tr>
            <td>{{ category.name }}</td>
            <td class="buttons">
                <a href="{{ path('editCategory', {'id':category.id}) }}" class="btn-edit">Edit</a>
                <a href="{{ path('removeCategory', {'id':category.id}) }}" class="btn-delete">Delete</a>
            </td>
            <td>{{ category.products|length }}</td>
        </tr>
        {% endfor %}
    </table>
{% endblock %}