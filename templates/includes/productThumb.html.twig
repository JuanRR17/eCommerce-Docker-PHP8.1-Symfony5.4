        <h2>{{product.brand.name}} | {{product.model}}</h2>
        <p><a href="{{ path('showCategory', {'id':product.category.id} )}}">{{ product.category.name }}</a></p>
        <p>{{product.price}} â‚¬ {% if product.offer %}
        <span>| Offer {{product.offer}}%</span>
        {% endif %}</p>
        <a href="{{ path('productDetail', {'id':product.id}) }}" class="button">See Product</a>
    </div>
</div>