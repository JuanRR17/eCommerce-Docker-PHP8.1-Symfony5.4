{% extends 'base.html.twig' %}

{% block title %}Orders{% endblock %}

{% block header %} My Orders {% endblock %}

{% block main %}
    {% if orders is not empty %}
        {% for order in orders %}
            <div class="ordered">
                <div class="ord-header container-fluid">
                    <div class="row">
                        <div class="col-auto">
                            DATE:<br/>
                            <span>{{order.createdAt | date('d/m/Y')}}</span>
                        </div>
                        <div class="col-auto">
                            STATUS:<br/>
                            <span>{{order.status}}</span>
                        </div>
                        <div class="col-auto">
                            TOTAL:<br/>
                            <span>{{order.cost|number_format(2, ',', '.')}} â‚¬</span>
                        </div>
                        <div class="col-auto dropdown">
                            DELIVERED TO:<br/>
                            <span>{{order.receiverName}} {{order.receiverSurname}}</span>
                            <div class="dropdown-content  myorders">
                                <div>{{order.address}}</div>
                                <div>{{order.city}}</div>
                                <div>{{order.country}}</div>
                            </div>
                        </div>                        
                        <div class="col-auto ms-md-auto text-end ">
                            Order #: {{order.id}}<br/>
                            <a href="{{ path('orderDetails', {'id':order.id}) }}" target="_blank">Order details</a>
                        </div>
                    </div>
                </div>
                <div class="ord-body container-fluid">
                    <div class="row">
                            {% for orderRow in order.orderRows %}
                            <div class="ord-row">
                                <div class="ord-img">
                                    <img src="{{ asset('/assets/imgs/products/'~ orderRow.product.id ~'/'~ orderRow.product.images[0].name ) }}" alt="Image not available"/>
                                </div>
                                <div class="ord-product">
                                    <a href="{{ path('productDetail', {'id':orderRow.product.id}) }}">{{orderRow.product.brand.name}} {{orderRow.product.model}}</a>
                                    </br>
                                    <div>x {{orderRow.quantity}}</div>
                                    <a class="btn btn-warning buy-again">Buy again</a>
                                </div>
                            </div>
                            {% endfor %}
                    </div>
                </div>
            </div>
        {% endfor %}
    {% else %}
        You don't have orders yet.
    {% endif %}
{% endblock %}
