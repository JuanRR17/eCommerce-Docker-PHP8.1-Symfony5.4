<!DOCTYPE HTML>
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<title>{% block title %}eCommerce{% endblock %}</title>
		{% block stylesheets %}
        <link href="{{ asset('assets/styles/app.css') }}" type="text/css" rel="stylesheet" />
		<!-- Bootstrap 5 -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
		{% endblock %}
    </head>
	<body>
		<div id="container">
			<!-- HEADER -->
            <header id="header">
                <div id="logo">
                    <img src="{{ asset('assets/imgs/global/logo.png') }}" alt="Logo" />
                    <a href="{{ path('index') }}">
                        eCommerce
                    </a>
                </div>
            </header>

			<!-- MENU -->
			<nav id="menu">
				
				<ul>
					<li>
						<a href="{{ path('index') }}">Home</a>
					</li>
				
					{% for category in getCategories() %}
						<li>
							<a href="{{ path('showCategory', {'id':category.id} )}}">{{ category.name }}</a>
						</li>
					{% endfor %}
				

					</ul>
				<ul class="float-right">
					<li>				
					{% set stats = statsBasket(app.user) %}
					<a href=
						{% if app.user %}
							"{{ path('basket', {'id':app.user.id}) }}"
							{% else %}
							"{{ path('basket')}}"
						{% endif %}>
					Basket ({{ stats.count }}): {{ stats.total }} â‚¬
					</a>
				</ul>
			</nav>

			<div id="content">

				<!-- SIDE BAR -->
				<aside id="lateral">
						{{ include('includes/side-bar.html.twig') }}
				</aside>

				<!-- CENTRAL CONTENT -->
                
				<div id="central">
                    {% block main %}{% endblock %}
				</div>
                
			</div>

			<!-- FOOTER -->
			<footer id="footer">
				<p>Developed by Juan Repeto &copy; <?= date('Y') ?></p>
			</footer>
		</div>
	</body>
</html>

