							<a href="{{ path('showCategory', {'id':category.id} )}}">{{ category.name }}</a>
						</li>
					{% endfor %}
				

					</ul>
				<ul class="float-right">
					<li>				
						{% set stats = statsBasket(app.user) %}
						<a href=
							{% if app.user %}
								"{{ path('basket', {'id':app.user.id}) }}"
