{% extends 'base.html.twig' %}

{% block title %}Brands{% endblock %}

{% block header %}Brands{% endblock %}

{% block main %}
    {% if message is defined %}
        <div class="message">{{message}}</div>
    {% endif %}
    <div class="row">
        <div class="col-md-6">
            <table class="table table-striped table-hover">
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                    <th>Products</th>
                </tr>
                {% for brand in getBrands() %}
                <tr>
                    <td>{{ brand.name }}</td>
                    <td>
                        <a href="{{ path('editBrand', {'id':brand.id}) }}" class="btn btn-outline-warning actions">Edit</a>
                        <a type="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop{{brand.id}}">
                            <span class="btn btn-outline-danger actions">Delete</span>
                        </a>
                        <!-- Modal -->
                        <div class="modal fade" id="staticBackdrop{{brand.id}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="staticBackdropLabel">Remove Brand <strong>{{brand.name}}</strong></h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <span>Are you sure you want to remove the Brand</br> 
                                            <strong>{{brand.name}}</strong>?
                                        </span></br>
                                        <a href="{{ path('removeBrand', {'id':brand.id}) }}" class="btn btn-danger">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <a href="{{ path('showBrand', {'id':brand.id} )}}">
                            {{ brand.products|length }}
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </table>
        </div>
        <div class="col-md-6">
        {# Create Brand #}
            <form action="{{path('manageBrands')}}" method='POST'>
                <label for="name">
                    Create New Brand
                </label>
                <input  class='form-control ' type="text" name="name" required="required"
                    placeholder="Name"
                    />
                <button type="submit" class="btn btn-primary mt-2">
                    Create
                </button>
            </form>

        {# Edit Brand #}
            {% if edit_brand is defined %}
            <form action="{{path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params'))}}" method='POST'>
                <label for="name">
                    Edit Brand "{{ edit_brand.name }}"
                </label>
                <input  class='form-control ' type="text" name="name" required="required"
                    placeholder="{{ edit_brand.name }}" value="{{ edit_brand.name }}"
                    />
                <button type="submit" class="btn btn-primary mt-2">                
                    Edit 
                </button>
            </form>
            {% endif %}
        </div>
    </div>
{% endblock %}