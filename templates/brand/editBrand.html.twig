{% extends 'base.html.twig' %}

{% block title %}Edit Brand{% endblock %}

{% block header %}Edit Brand {{ edit_brand.name }}{% endblock %}

{% block main %}
    {% if message is defined %}
        {{message}}
    {% endif %}
    <form action="{{path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params'))}}" method='POST'>
        <label for="name">Name*</label>
        <input type="text" name="name" value="{{ edit_brand.name }}" required="required"/>

        <button type="submit" class="btn btn-primary mt-2">Edit Brand</button>
    </form>
{% endblock %}