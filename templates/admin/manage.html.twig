{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block header %}Categories{% endblock %}

{% block main %}
    {% if message is defined %}
        <div class="message">{{message}}</div>
    {% endif %}
    <div class="row">
        <div class="col-md-6">
            <table class="table table-striped table-hover">
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                    <th>Products</th>
                </tr>
            
                {% for category in getCategories() %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td class="actions">
                        <a href="{{ path('editCategory', {'id':category.id}) }}" class="btn btn-outline-warning">Edit</a>
                        <a href="{{ path('removeCategory', {'id':category.id}) }}" class="btn btn-outline-danger">Delete</a>
                    </td>
                    <td>
                        <a href="{{ path('showCategory', {'id':category.id} )}}">
                            {{ category.products|length }}
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </table>
        </div>
        <div class="col-md-6">
        {# Create Category #}
            <form action="{{path('manageCategories')}}" method='POST'>
                <label for="name">
                    Create New Category
                </label>
                <input  class='form-control ' type="text" name="name" required="required"
                    placeholder="Name"
                    />
                <button type="submit" class="btn btn-primary mt-2">
                    Create
                </button>
            </form>

        {# Edit Category #}
            {% if edit_cat is defined %}
            <form action="{{path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params'))}}" method='POST'>
                <label for="name">
                    Edit Category "{{ edit_cat.name }}"
                </label>
                <input  class='form-control ' type="text" name="name" required="required"
                    placeholder="{{ edit_cat.name }}" value="{{ edit_cat.name }}"
                    />
                <button type="submit" class="btn btn-primary mt-2">                
                    Edit 
                </button>
            </form>
            {% endif %}
        </div>
    </div>
{% endblock %}